@model MOMProject.Models.Meeting;

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    body {
        background-color: #f4f7f6;
        font-family: 'Inter', sans-serif;
        color: #334155;
    }

    .has-validation .invalid-feedback {
        display: block !important;
        width: 100%;
        margin-top: 0.25rem;
        font-size: 0.875em;
        color: #dc3545;
    }

    .field-validation-error {
        display: block !important;
    }

    .field-validation-valid {
        display: none;
    }

    .breadcrumb-item a {
        text-decoration: none;
        color: #64748b;
    }

    .breadcrumb-item.active {
        color: #1e293b;
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
    }

    .form-control, .form-select {
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        border-color: #e2e8f0;
    }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1);
            border-color: #0d6efd;
        }

    .btn-primary {
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
    }

    .btn-light-alt {
        background-color: #f8fafc;
        border: 1px solid #e2e8f0;
        color: #64748b;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.2s;
    }

        .btn-light-alt:hover {
            background-color: #f1f5f9;
            color: #334155;
            border-color: #cbd5e1;
        }

    .input-group-text {
        background-color: #f8fafc;
        border-color: #e2e8f0;
        color: #94a3b8;
    }

    .text-danger {
        font-size: 0.825rem;
    }
</style>

<body class="py-4 py-md-5">
    <div class="container">
        <!-- Page Header (unchanged) -->
        <div class="row mb-4 align-items-center">
            <div class="col-12">
                <h1 class="h3 fw-bold mb-1">Meetings Management</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Meetings</a></li>
                        <li class="breadcrumb-item"><a href="#">Meetings List</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Meetings Add/Edit</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Main Form Card -->
        <div class="row justify-content-center">
            <div class="col-xl-9 col-lg-10">
                <div class="card p-4 p-md-5">
                    <div class="text-center mb-5">
                        <div class="bg-primary bg-opacity-10 text-primary d-inline-flex align-items-center justify-content-center rounded-circle mb-3" style="width: 60px; height: 60px;">
                            <i class="fa-solid fa-calendar-check fs-3"></i>
                        </div>
                        <h2 class="h4 fw-bold">Meeting Details</h2>
                        <p class="text-muted small">Fill in the information below to schedule or update a meeting session.</p>
                    </div>

                    <form asp-action="MeetingsAddEdit" method="post">
                        <div class="row g-4 mb-4">
                            <!-- Meeting Name -->
                            <div class="col-md-6">
                                <label asp-for="MeetingName" class="form-label fw-semibold">
                                    Meeting Name <span class="text-danger">*</span>
                                </label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fa-solid fa-heading"></i></span>
                                    <input asp-for="MeetingName" class="form-control" placeholder="Enter Meeting Name" />
                                    <span class="invalid-feedback d-block">
                                        <span asp-validation-for="MeetingName"></span>
                                    </span>
                                </div>
                            </div>

                            <!-- Meeting Date -->
                            <div class="col-md-6">
                                <label asp-for="MeetingDate" class="form-label fw-semibold">
                                    Select Date <span class="text-danger">*</span>
                                </label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fa-solid fa-calendar-day"></i></span>
                                    <input asp-for="MeetingDate" type="date" class="form-control" />
                                    <span class="invalid-feedback d-block">
                                        <span asp-validation-for="MeetingDate"></span>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <!-- Meeting Venue -->
                            <div class="col-md-4">
                                <label asp-for="MeetingVenue" class="form-label fw-semibold">
                                    Meeting Venue <span class="text-danger">*</span>
                                </label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fa-solid fa-location-dot"></i></span>
                                    <select asp-for="MeetingVenue" class="form-select">
                                        <option value="">Select Meeting Venue</option>
                                        <option value="Audi - 10">Audi - 10</option>
                                        <option value="Audi - 5">Audi - 5</option>
                                        <option value="Audi - 8">Audi - 8</option>
                                        <option value="Audi - 2">Audi - 2</option>
                                    </select>
                                    <span class="invalid-feedback d-block">
                                        <span asp-validation-for="MeetingVenue"></span>
                                    </span>
                                </div>
                            </div>

                            <!-- Meeting Type -->
                            <div class="col-md-4">
                                <label asp-for="MeetingType" class="form-label fw-semibold">
                                    Meeting Type <span class="text-danger">*</span>
                                </label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fa-solid fa-bookmark"></i></span>
                                    <select asp-for="MeetingType" class="form-select">
                                        <option value="">Select Meeting Type</option>
                                        <option value="Weekly Sync">Weekly Sync</option>
                                        <option value="Formal Meeting">Formal Meeting</option>
                                        <option value="Decision Making">Decision Making</option>
                                        <option value="Information Sharing">Information Sharing</option>
                                    </select>
                                    <span class="invalid-feedback d-block">
                                        <span asp-validation-for="MeetingType"></span>
                                    </span>
                                </div>
                            </div>

                            <!-- Department -->
                            <div class="col-md-4">
                                <label asp-for="DepartmentName" class="form-label fw-semibold">
                                    Department <span class="text-danger">*</span>
                                </label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fa-solid fa-building"></i></span>
                                    <select asp-for="DepartmentName" class="form-select">
                                        <option value="">Select Department</option>
                                        <option value="Finance">Finance</option>
                                        <option value="Information Technology">Information Technology</option>
                                        <option value="Customer Service">Customer Service</option>
                                    </select>
                                    <span class="invalid-feedback d-block">
                                        <span asp-validation-for="DepartmentName"></span>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Remarks -->
                        <div class="mb-4">
                            <label for="Remarks" class="form-label fw-semibold">Remarks</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-pen-to-square"></i></span>
                                <textarea asp-for="Remarks" class="form-control" placeholder="Enter the meeting description or notes" rows="3"></textarea>
                                <span class="invalid-feedback d-block">
                                    <span asp-validation-for="Remarks"></span>
                                </span>
                            </div>
                        </div>

                        <hr class="my-4 opacity-50">

                        <!-- Action Buttons -->
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2">
                                    <i class="fa-solid fa-floppy-disk"></i>
                                    Save Meeting
                                </button>
                            </div>
                            <div class="col-sm-6">
                                <a asp-action="MeetingsList" class="btn btn-light-alt w-100 text-center">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Footer Info (unchanged) -->
                <div class="mt-4 px-2 d-flex gap-3 text-muted">
                    <i class="fa-solid fa-circle-info mt-1"></i>
                    <p class="small mb-0">
                        Scheduling a meeting will automatically check for venue availability. Please ensure the date and time do not overlap with existing bookings.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>