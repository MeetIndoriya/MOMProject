<div class="pagetitle">
    <h1>Data Tables</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a>Meetings</a></li>
            <li class="breadcrumb-item">Meetings List</li>
            <li class="breadcrumb-item">Meetings Add/Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="container-fluid">
    <div class="card p-4">
        <form>
            <div class="d-flex justify-content-center">
                <div class="form-group col-md-3 text-start">
                    <label for="MeetingsName" class="mb-2">Meeting Name</label>
                    <input type="text"
                           class="form-control"
                           id="MeetingsName"
                           placeholder="Enter Meeting Name">
                </div>

                <div class="col-md-3 text-start">
                    <lable for="MeetingsDate" class="m-2">Select Date:</lable><br>
                    <input type="date" class="form-control m-2">
                </div>
            </div>

            <div class="d-flex justify-content-center">
               

                <div class="dropdown m-2">
                    <label for="MeetingVenue" class="m-2">Meeting Venue</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Select Meeting Venue</option>
                        <option value="1">Audi - 10</option>
                        <option value="2">Audi - 5</option>
                        <option value="3">Audi - 8</option>
                        <option value="4">Audi - 2</option>
                    </select>
                </div>

                <div class="dropdown m-2">
                    <label for="MeetingName" class="m-2">Meeting Type</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Select Meeting Type</option>
                        <option value="1">Weekly Sync</option>
                        <option value="2">Formal Metting</option>
                        <option value="3">Decision Making</option>
                        <option value="4">Information Sharing</option>
                    </select>
                </div>

                <div class="dropdown m-2">
                    <label for="DepartmentName" class="m-2">Department</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Select Department</option>
                        <option value="1">Finance</option>
                        <option value="2">Information Technology</option>
                        <option value="3">Customer Service</option>
                    </select>
                </div>
            </div>

            <!-- Meeting Description -->
            <div class="row justify-content-center">
                <div class="form-group col-md-4 m-2 text-start">
                    <label for="MeetingDescription" class="m-2">Remarks</label>
                    <textarea id="MeetingDescription"name="MeetingDescription" class="form-control" placeholder="Enter the meeting description"></textarea>
                </div>
            </div>


            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary mx-2">Add</button>
                <button type="button" class="btn btn-secondary mx-2">Edit</button>
            </div>
        </form>
    </div>
</div>
