
@model MOMProject.Models.MeetingMember;

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    body {
        background-color: #f4f7f6;
        font-family: 'Inter', sans-serif;
        color: #334155;
    }

    .breadcrumb-item a {
        text-decoration: none;
        color: #64748b;
    }

    .breadcrumb-item.active {
        color: #1e293b;
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
    }

    .form-control {
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        border-color: #e2e8f0;
    }

        .form-control:focus {
            box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1);
            border-color: #0d6efd;
        }

    .btn-primary {
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
    }

    .btn-light-alt {
        background-color: #f8fafc;
        border: 1px solid #e2e8f0;
        color: #64748b;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.2s;
    }

        .btn-light-alt:hover {
            background-color: #f1f5f9;
            color: #334155;
            border-color: #cbd5e1;
        }

    .input-group-text {
        background-color: #f8fafc;
        border-color: #e2e8f0;
        color: #94a3b8;
    }
</style>


<body class="py-4 py-md-5">
    <div class="container">
        <!-- Page Header unchanged -->
        <div class="row mb-4 align-items-center">
            <div class="col-12">
                <h1 class="h3 fw-bold mb-1">Meeting Member Management</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Meeting Member</a></li>
                        <li class="breadcrumb-item"><a href="#">Meeting Member List</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Meeting Member Add/Edit</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Main Form Card -->
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card p-4 p-md-5">
                    <div class="text-center mb-5">
                        <div class="bg-primary bg-opacity-10 text-primary d-inline-flex align-items-center justify-content-center rounded-circle mb-3" style="width: 60px; height: 60px;">
                            <i class="fa-solid fa-user-group fs-3"></i>
                        </div>
                        <h2 class="h4 fw-bold">Member Details</h2>
                        <p class="text-muted small">Update the information below to manage meeting participants.</p>
                    </div>

                    <form asp-action="MeetingMemberAddEdit" method="post">
                        <!-- Meeting Member Name -->
                        <div class="mb-4">
                            <label asp-for="MeetingMemberName" class="form-label fw-semibold">
                                Member Name <span class="text-danger">*</span>
                            </label>
                            <div class="input-group has-validation">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-user"></i>
                                </span>
                                <input asp-for="MeetingMemberName"
                                       class="form-control"
                                       placeholder="Enter Meeting Member Name" />
                                <span class="invalid-feedback d-block">
                                    <span asp-validation-for="MeetingMemberName"></span>
                                </span>
                            </div>
                        </div>

                        <!-- Remarks (was MeetingDescription) -->
                        <div class="mb-4">
                            <label asp-for="Remarks" class="form-label fw-semibold">Meeting Remarks</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-comment-dots"></i>
                                </span>
                                <textarea asp-for="Remarks" class="form-control" placeholder="Enter meeting remarks" rows="3"></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4 opacity-50">

                        <!-- Action Buttons -->
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2">
                                    <i class="fa-solid fa-floppy-disk"></i>
                                    Save Changes
                                </button>
                            </div>
                            <div class="col-sm-6">
                                <a asp-action="MeetingMemberList" class="btn btn-light-alt w-100 text-center">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Footer Info unchanged -->
                <div class="mt-4 px-2 d-flex gap-3 text-muted">
                    <i class="fa-solid fa-circle-info mt-1"></i>
                    <p class="small mb-0">
                        Information provided here is used for meeting invitations and attendance tracking. Ensure the member details are accurate before saving.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>