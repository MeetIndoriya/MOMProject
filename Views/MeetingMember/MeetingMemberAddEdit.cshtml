@* MeetingMember TABLE *@
<div class="container-fluid card p-3">
    <form>

        <!-- Meeting Member Name -->
        <div class="row justify-content-center">
            <div class="form-group col-md-4 m-2">
                <label for="MeetingMemberName" class="m-2 text-center">Member Name</label>
                <input type="text"
                       class="form-control"
                       id="MeetingMemberName"
                       name="MeetingMemberName"
                       placeholder="Enter Meeting Member Name">
            </div>
        </div>

        <!-- Meeting Description -->
        <div class="row justify-content-center">
            <div class="form-group col-md-4 m-2 text-start">
                <label for="MeetingDescription" class="m-2">Meeting Description</label>
                <textarea id="MeetingDescription"
                          name="MeetingDescription"
                          class="form-control"
                          placeholder="Enter the meeting description"></textarea>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary m-3">Add</button>
            <button type="button" class="btn btn-secondary m-3">Edit</button>
        </div>

    </form>
</div>


