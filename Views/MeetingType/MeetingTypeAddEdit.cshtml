@model MeetingType


<div class="pagetitle">
    <h1>Data Tables</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a>Meeting Type</a></li>
            <li class="breadcrumb-item">Meeting Type List</li>
            <li class="breadcrumb-item">Meeting Type Add/Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="d-flex justify-content-end">

    <a asp-controller="MeetingType" asp-action="MeetingTypeAddEdit">
        <button type="button" class="btn btn-primary mb-5">MeetingTypeAddEdit</button>
    </a>
</div>


@* MeetingMember TABLE *@
<div class="container-fluid card p-3">
    <form asp-controller="MeetingType" asp-action="Create" method="post">

        <!-- Meeting Member Name -->
        <div class="row justify-content-center">
            <div class="form-group col-md-4 m-2">
                <label for="MeetingTypeName" class="m-2 text-center">Meeting Type</label>
                <input type="text"
                       class="form-control"
                       id="MeetingType"
                       name="MeetingType"
                       placeholder="Enter Meeting Type"
                       asp-for="Meetingtype">
                <span asp-validation-for="Meetingtype" class="text-danger"></span>
            </div>
        </div>

        <!-- Meeting Description -->
        <div class="row justify-content-center">
            <div class="form-group col-md-4 m-2 text-start">
                <label for="MeetingDescription" class="m-2">Remarks</label>
                <textarea id="MeetingDescription"
                          name="MeetingDescription"
                          class="form-control"
                          placeholder="Enter the meeting description" asp-for="Remarks"></textarea>

                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary m-3">Add</button>
            <button type="button" class="btn btn-secondary m-3">Edit</button>
        </div>

    </form>
</div>

