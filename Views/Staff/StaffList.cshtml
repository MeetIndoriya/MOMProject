@model List<Staff>

<div class="pagetitle">
    <h1>Staff</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a>Staff</a></li>
            <li class="breadcrumb-item">Staff List</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<div class="d-flex justify-content-end">

    <a asp-controller="Staff" asp-action="StaffAddEdit">
        <button type="button" class="btn btn-primary mb-5">StaffAddEdit</button>
    </a>
</div>



<div class="card">
    <div class="card-body">

        <div class="d-flex justify-content-center">
        <h5 class="card-title">Staff  Table</h5>
        </div>

        <div class="d-flex justify-content-center">
        <p>All The Record of The <code>Staff List</code></p>
        </div>
        <!-- Bordered Table -->

        <div class="container col-sm-3 d-flex justify-content-end ">
            <input class="form-control" id="myInput" type="text" placeholder="Search here">
        </div>
        <table class="table table-bordered mt-5">
            <thead>
                <tr>
                    <th scope="col">Serial No.</th>
                    <th scope="col">Staff ID</</th>
                    <th scope="col">Staff Name</</th>
                    <th scope="col">Staff Email </</th>
                </tr>
            </thead>
            <tbody >
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StaffID</td>
                        <td>@item.StaffName</td>
                        <td>@item.Created</td>
                        <td>@item.Modified</td>
                    </tr>
                }
            </tbody>
        </table>
     </div>
</div>
        <!-- End Bordered Table -->


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

        <script>
            $(document).ready(function(){
              $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
              });
            });
        </script>